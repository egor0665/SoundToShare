<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/logo"
            android:background="@color/primary_green"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center_vertical|center_horizontal"

            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/question"
            android:layout_below="@+id/logo"
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You like musik? Lets go hear!"
            android:fontFamily="@font/abril_fatface"
            android:textColor="@color/black"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"/>

    <TextView
            android:id="@+id/selection"
            android:layout_below="@+id/question"
            android:layout_marginTop="15sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_first"
            android:fontFamily="@font/abril_fatface"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center_vertical|center_horizontal"
            tools:ignore="MissingConstraints"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question"
            />

    <ImageButton
            android:id="@+id/leftArrow"
            android:background="@drawable/oval_button"
            android:layout_below="@+id/selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="auto"
            android:src="@drawable/ic_arrow_down_left_icon"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/selection"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@+id/rightArrow" />

    <ImageButton
            android:id="@+id/rightArrow"
            android:background="@drawable/oval_button"
            android:layout_below="@+id/selection"
            android:layout_marginStart="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="auto"
            android:src="@drawable/ic_arrow_down_right_icon"
            android:keepScreenOn="true"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selection"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@+id/leftArrow" />
    <View
            android:id="@+id/greenBottom"
            tools:ignore="MissingConstraints"

            android:layout_height="0dp"
            android:layout_width="0dp"

            app:layout_constraintEnd_toStartOf="@id/greenRight"
            app:layout_constraintStart_toEndOf="@+id/greenLeft"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/questionView"
            android:layout_marginTop="0dp"
            android:background="@drawable/gradient_spotify_view_bottom"


            />
    <View
            android:id="@+id/whiteBottom"
            tools:ignore="MissingConstraints"

            android:layout_height="0dp"
            android:layout_width="0dp"

            app:layout_constraintEnd_toStartOf="@id/greenRight"
            app:layout_constraintStart_toEndOf="@+id/greenLeft"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"
            app:layout_constraintTop_toBottomOf="@id/questionView"
            android:layout_marginTop="0dp"
            android:background="@drawable/gradient_spotify_view_bottom_white"


            />
    <View
            android:id="@+id/greenRight"
            tools:ignore="MissingConstraints"

            android:layout_height="0dp"
            android:layout_width="135dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rightArrow"

            android:layout_marginTop="15dp"
            android:background="@drawable/gradient_spotify_view_right"


            />

    <View
            android:id="@+id/greenLeft"
            tools:ignore="MissingConstraints"

            android:layout_height="0dp"
            android:layout_width="135dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rightArrow"

            android:layout_marginTop="15dp"
            android:background="@drawable/gradient_spotify_view_left"

            />
    <View
            android:id="@+id/questionView"
            tools:ignore="MissingConstraints"

            android:layout_height="0dp"
            android:layout_width="0dp"


            app:layout_constraintStart_toStartOf="@id/spotify"
            android:layout_marginStart="25dp"

            app:layout_constraintEnd_toEndOf="@id/google"
            android:layout_marginEnd="25dp"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"

            app:layout_constraintTop_toBottomOf="@+id/rightArrow"
            android:layout_marginTop="100dp"

            android:background="@drawable/ic_question_service_icon"
            />

    <ImageButton
            android:id="@+id/google"
            android:background="@drawable/oval_button"
            android:layout_below="@+id/selection"
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="auto"
            android:src="@drawable/ic_google"
            android:keepScreenOn="true"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/greenRight"
            android:layout_marginTop="30dp"

            />

    <ImageButton
            android:id="@+id/spotify"
            android:background="@drawable/oval_button"
            android:layout_below="@+id/selection"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="auto"
            android:src="@drawable/ic_spotify"
            android:keepScreenOn="true"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/greenLeft"
            android:layout_marginTop="30dp"

            />

</androidx.constraintlayout.widget.ConstraintLayout>